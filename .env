# Database Configuration
DATABASE_URL=postgresql://easy_air_claim_user:easy_air_claim_password@localhost:5432/easy_air_claim_db
DATABASE_TEST_URL=postgresql://easy_air_claim_user:easy_air_claim_password@localhost:5432/easy_air_claim_test_db

# Application Configuration
APP_NAME="Easy Air Claim API"
APP_VERSION="1.0.0"
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=["application/pdf", "image/jpeg", "image/jpg", "image/png"]

# Redis Configuration (for background tasks)
REDIS_URL=redis://redis:6379/0

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@easyairclaim.com

# Admin Configuration
ADMIN_EMAIL=admin@easyairclaim.com
ADMIN_PASSWORD=secure-admin-password