# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/flight_claim_db
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/flight_claim_test_db

# Application Configuration
APP_NAME="Flight Compensation Claim API"
APP_VERSION="1.0.0"
DEBUG=false
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://yourdomain.com"]

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=["application/pdf", "image/jpeg", "image/jpg", "image/png"]

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@flightclaim.com

# Admin Configuration
ADMIN_EMAIL=admin@flightclaim.com
ADMIN_PASSWORD=secure-admin-password