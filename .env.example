# Development Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/flight_claim?ssl=disable

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=true

# Security (CHANGE THESE FOR PRODUCTION)
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-base64-32
FILE_ENCRYPTION_KEY=your-encryption-key-here-generate-with-scripts/generate_secrets.py

# File Management
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Nextcloud Configuration
NEXTCLOUD_URL=http://nextcloud:80
NEXTCLOUD_USERNAME=admin
NEXTCLOUD_PASSWORD=your-nextcloud-password-here

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security Features
VIRUS_SCAN_ENABLED=false
CLAMAV_URL=clamav:3310

# Rate Limiting
RATE_LIMIT_UPLOAD=100/minute
RATE_LIMIT_DOWNLOAD=1000/minute

# JWT Configuration
JWT_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=7

# CORS Settings (add your Cloudflare tunnel domain here)
CORS_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:3001,https://eac.dvvcloud.work

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security Headers
SECURITY_HEADERS_ENABLED=false

# File Retention
FILE_RETENTION_DAYS=365

# Nextcloud Settings
NEXTCLOUD_TIMEOUT=30
NEXTCLOUD_MAX_RETRIES=3

# Email Configuration (Phase 2)
# IMPORTANT: Use app-specific password for Gmail, not your main password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password-here

SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=ClaimPlane
SMTP_USE_TLS=true
NOTIFICATIONS_ENABLED=true

# Google Cloud Configuration (OCR and Gemini)
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Create a service account and download JSON key file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-cloud-service-account-key.json

# Vertex AI / Gemini Configuration (Semantic OCR)
# Uses same GOOGLE_APPLICATION_CREDENTIALS as above
# Get project ID from: https://console.cloud.google.com
GOOGLE_CLOUD_PROJECT=your-project-id-here
GOOGLE_CLOUD_LOCATION=us-central1
